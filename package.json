{
  "name": "use-async-overlay:root",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo for use-async-overlay",
  "scripts": {
    "build": "pnpm -r --if-present --filter './packages/*'",
    "build:docs": "pnpm -r --if-present --filter './packages/*' --filter './apps/*' build",
    "dev": "pnpm -r --parallel --filter './packages/use-async-overlay' --filter './apps/docs' dev",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "release:dry": "changeset publish --dry-run",
    "prepare": "husky",
    "prettier": "prettier .",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@use-async-overlay/eslint-config": "workspace:*",
    "eslint": "9.35.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14"
  }
}
