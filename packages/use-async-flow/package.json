{
  "name": "use-async-flow",
  "version": "0.3.0",
  "description": "Promise-based state management hook for React",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --clean",
    "dev": "tsup src/index.ts --dts --format esm,cjs --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "prepublishOnly": "pnpm build"
  },
  "bugs": {
    "url": "https://github.com/custardcream98/use-async-flow/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/custardcream98/use-async-flow.git"
  },
  "keywords": [
    "react",
    "hook",
    "overlay",
    "dialog",
    "promise"
  ],
  "author": "shiwoo.park <custardcream@kakao.com>",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=18.3.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "19.1.13",
    "eslint": "9.35.0",
    "tsup": "8.5.0",
    "typescript": "5.9.2",
    "@use-async-flow/eslint-config": "workspace:*"
  }
}
